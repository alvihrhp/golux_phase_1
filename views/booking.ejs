<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <%- include('partials/bootstrap') %>

    <title>GoLux!</title>
  </head>
  <body>
    <!--Navbar-->
    <%- include('partials/navbar') %>
    <!--Navbar-->
    <div class="container">
        <div class="row justify-content-center mt-5 mb-4">
            <div class="col-lg-10" style="display: flex; justify-content: center;">
                <form method="POST" action="" enctype="application/x-www-form-urlencoded" style="padding: 0 50px;">
                    <div class="form-group">
                        <label>Start Rent</label>
                        <input id="datepickerStart" name="startAt" width="350" />
                    </div>
                    <div class="form-group">
                        <label>End Rent</label>
                        <input id="datepickerEnd" name="endAt" width="350" />
                    </div>
                    <div class="button-container mt-4" style="text-align: center;">
                        <button type="submit" class="btn btn-success" style="width: 150px; height: 50px; font-size: 20px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <script>
        $(document).ready(function() { 
            $('#datepickerStart').datepicker({
                format: 'mm/dd/yyyy'
            });

            $('#datepickerEnd').datepicker({
                format: 'mm/dd/yyyy'
            });
        });
    </script>
  </body>
</html>