<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap -->
    <%- include('partials/bootstrap') %>
    <title>GoLux!</title>
  </head>
  <body>
    <!--Navbar-->
    <%- include('partials/navbar') %>
    <!--Navbar-->
    <!--Register Form-->
    <div class="container">
        <div class="row mt-5" style="text-align: center;">
            <div class="col-lg-12">
                <h1>Login Here!</h1>
            </div>
        </div>
        <div class="row justify-content-center mt-3" style="padding: 0 350px;">
            <div class="col-lg-12">
                <form method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Input Email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Input Password">
                    </div>
                    <div class="button-container mt-4" style="text-align: center;">
                        <button type="submit" class="btn btn-primary" style="width: 25%; font-size: 18px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--Register Form-->
  </body>
</html>