<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/style.css" >

    <title>GoLux!</title>
  </head>
  <body>
    <!--Navbar-->
    <%- include('partials/navbar-admin') %>
    <!--Navbar-->
    <div class="container">
        <div class="row justify-content-center mt-4 mb-4">
            <div class="col-lg-10">
                <form method="POST" action="" enctype="multipart/form-data" style="padding: 0 100px;">
                    <div class="form-group">
                        <label>Upload Picture</label>
                        <input type="file" class="form-control-file" name="photo">
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Input Car Name">
                    </div>
                    <div class="form-group">
                        <label for="brand">Brand</label>
                        <input type="text" class="form-control" name="brand" placeholder="Input Brand Name">
                    </div>
                    <div class="form-group">
                        <label for="brand">Price/Day</label>
                        <input type="number" class="form-control" name="pricePerDay" placeholder="Input Price/Day">
                    </div>
                    <div class="form-group">
                        <label for="type">Select Type</label>
                        <select class="form-control" name="type">
                            <option>suv</option>
                            <option>sedan</option>
                            <option>sport</option>
                            <option>minibus</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" name="description" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="video">Trailer</label>
                        <input type="text" class="form-control" name="video" placeholder="Input Car Trailer">
                    </div>
                    <div class="button-container" style="text-align: center;">
                        <button type="submit" class="btn btn-success" style="width: 130px; height: 45px; font-size: 20px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>