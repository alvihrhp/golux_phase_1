<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap -->
    <%- include('partials/bootstrap') %>
    <title>GoLux!</title>
  </head>
  <body>
    <!--Navbar-->
    <%- include('partials/navbar') %>
    <!--Navbar-->
    <!--List Fleet Type-->
    <div class="container">
      <div class="row mt-5">
        <% cars.forEach(car => { %>
        <div class="col-lg-4">
          <div class="flip-card">
            <div class="flip-card-inner">
              <div class="flip-card-front">
                <img src="/uploads/<%=car.path_picture%>" alt="Avatar" style="width:300px;height:200px;">
              </div>
              <div class="flip-card-back">
                <h2 class="mt-3"><%= car.brand %></h2>
                <h6><%= car.name %></h6>
                <a class="btn btn-warning mt-3" href="/fleet/detail/<%=car.id%>">Details</a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <!--List Fleet Type-->
</body>
</html>